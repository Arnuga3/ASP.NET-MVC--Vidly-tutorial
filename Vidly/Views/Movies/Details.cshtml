@model Vidly.Models.Movie

<h2>@Model.Name</h2>
<ul>
    <li>Name: @Model.Name</li>
    <li>Genre: @Model.Genre</li>

    @if (@Model.ReleaseDate.HasValue)
    {
        <li>Released: @Model.ReleaseDate.Value.ToShortDateString()</li>
    }

    @if (@Model.DateAdded.HasValue)
    {
        <li>Added: @Model.DateAdded.Value.ToShortDateString()</li>
    }

    @if (@Model.NumberInStock > 0)
    {
        <li>In stock: @Model.NumberInStock</li>
    }
    else
    {
        <li>In stock: 0</li>
    }
</ul>